# SHADOWGUARD Environment Configuration
# Copy this file to .env and fill in your values

# Polygon RPC Endpoint (Amoy Testnet)
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# SQLite database path
DB_PATH=shadowguard.db

# Policy configuration file path
POLICY_FILE=policy.json

# Simulation timeout in seconds
SIMULATION_TIMEOUT=10

# Gas anomaly threshold (percentage of gas limit)
GAS_ANOMALY_THRESHOLD=80

# Maximum nested call depth before flagging
MAX_NESTED_CALLS=5
